{
  "projects": {
    "wish-x": {
      "enabled": true,
      "repo_owner": "andiaminukman2",
      "repo_name": "wish-x",
      "default_branch": "main",
      "workspace_path": "/home/ubuntu/workspace/wish-x",
      "service_type": "pm2",
      "service_name": "wish-x",
      "restart_command": "pm2 restart wish-x",
      "docs_path": "docs",
      "codebase_map_file": "docs/CODEBASE_MAP.md",
      "watch_paths": [
        "src/**/*",
        "app/**/*",
        "lib/**/*",
        "components/**/*",
        "pages/**/*"
      ],
      "ignore_paths": [
        "node_modules/**",
        "dist/**",
        "build/**",
        ".next/**",
        "*.log"
      ]
    },
    "wish-backend-x": {
      "enabled": true,
      "repo_owner": "andiaminukman2",
      "repo_name": "wish-backend-x",
      "default_branch": "main",
      "workspace_path": "/home/ubuntu/workspace/wish-backend-x",
      "service_type": "pm2",
      "service_name": "wish-backend-x",
      "restart_command": "pm2 restart wish-backend-x",
      "docs_path": "docs",
      "codebase_map_file": "docs/CODEBASE_MAP.md",
      "watch_paths": [
        "src/**/*",
        "app/**/*",
        "lib/**/*",
        "routes/**/*",
        "controllers/**/*",
        "models/**/*",
        "services/**/*"
      ],
      "ignore_paths": [
        "node_modules/**",
        "dist/**",
        "build/**",
        "*.log"
      ]
    },
    "as-you-wish-multi-agent": {
      "enabled": true,
      "repo_owner": "andiaminukman2",
      "repo_name": "as-you-wish-multi-agent",
      "default_branch": "main",
      "workspace_path": "/home/ubuntu/workspace/as-you-wish-multi-agent",
      "service_type": "pm2",
      "service_name": "as-you-wish-multi-agent",
      "restart_command": "pm2 restart as-you-wish-multi-agent",
      "docs_path": "docs",
      "codebase_map_file": "docs/CODEBASE_MAP.md",
      "watch_paths": [
        "src/**/*",
        "app/**/*",
        "lib/**/*",
        "agents/**/*",
        "workflows/**/*"
      ],
      "ignore_paths": [
        "node_modules/**",
        "dist/**",
        "build/**",
        "*.log"
      ]
    },
    "claude-agent-server": {
      "enabled": true,
      "repo_owner": "andiaminukman2",
      "repo_name": "claude-agent-server",
      "default_branch": "main",
      "workspace_path": "/home/ubuntu/workspace/claude-agent-server",
      "service_type": "pm2",
      "service_name": "claude-agent-server",
      "restart_command": "pm2 restart claude-agent-server",
      "docs_path": "docs",
      "codebase_map_file": "docs/CODEBASE_MAP.md",
      "watch_paths": [
        "src/**/*",
        "app/**/*",
        "lib/**/*",
        "server/**/*",
        "routes/**/*",
        "services/**/*"
      ],
      "ignore_paths": [
        "node_modules/**",
        "dist/**",
        "build/**",
        "*.log"
      ]
    }
  },
  "settings": {
    "webhook_port": 6000,
    "max_concurrent_jobs": 2,
    "job_timeout_minutes": 30,
    "pr_branch_prefix": "docs/auto-update-",
    "pr_title_template": "ðŸ“š Auto-update documentation",
    "pr_body_template": "This PR was automatically generated by the Documentation Automation Hub.\n\n**Changes:**\n- Updated codebase documentation using Cartographer\n- Regenerated CODEBASE_MAP.md\n\n**Triggered by:** {trigger_event}\n**Commit:** {commit_sha}\n\nPlease review the changes before merging.",
    "commit_message_template": "docs: auto-update documentation [skip ci]",
    "claude_code_path": "/usr/local/bin/claude",
    "log_retention_days": 7
  }
}
